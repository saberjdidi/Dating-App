<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Thème de démarrage -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowFullscreen">true</item>
        <!--Splah Screen-->
       <!-- <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item> -->
    </style>
    <!-- Thème principal (NormalTheme) : appliqué pendant et après l'initialisation Flutter -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>

        <!-- Clés pour transparence et full screen -->
        <item name="android:windowTranslucentStatus">true</item> <!-- Rend la status bar translucide -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- Couleur transparente -->

        <!-- Gère les découpages d'écran (encoches/punch-holes) pour éviter la bande noire -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- Optionnel : pour la nav bar si besoin -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>
